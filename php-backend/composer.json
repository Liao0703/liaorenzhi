{
    "name": "learning-platform/php-backend",
    "description": "铁路职工学习平台PHP后端服务",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Learning Platform Team",
            "email": "dev@learning-platform.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "slim/slim": "^4.10",
        "slim/psr7": "^1.5",
        "firebase/php-jwt": "^6.4",
        "doctrine/dbal": "^3.5",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^2.8",
        "respect/validation": "^2.2",
        "tuupola/cors-middleware": "^1.4",
        "selective/basepath": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
